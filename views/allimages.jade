extends layout

block content
    div.row
        div.col-sm-12
            form.form-horizontal(action="/upload", method="post", enctype="multipart/form-data")
                input.input-group(type="file", name="displayImage")
                br
                input.btn.btn-default(type='submit',class='btn btn-default')
                br
                br
        -for(var i = 0; i < images.length;i++)
            div.col-sm-3
                img(src='/uploads/'+images[i].name,style='max-width:100%;')
                br
                | !{images[i].name} | !{images[i].created}
